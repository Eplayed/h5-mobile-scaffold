*
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-overflow-scrolling touch

html
body
  width 100%
  height 100%

body
  position relative
  max-width 480px
  max-height 960px

h1
ul
p
  margin 0
  padding 0

ul
  list-style none

button
input
  outline none

label
span
input
a
  vertical-align middle

a
  text-decoration none

input[type=number]::-webkit-inner-spin-button
  -webkit-appearance none

.clearfix
  clearfix()
