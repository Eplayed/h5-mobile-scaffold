doctype html
html(xmlns="http://www.w3.org/1999/xhtml")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
    meta(name="format-detection" content="telephone=no")
    meta(name="description", content=description)
    meta(name="author", content=author)
    title #{title || 'H5 移动端开发脚手架'}

    //- Icon
    link(href=(favicon || './favicon.ico'), rel="shortcut icon")

    //- CDN scripts
    script(src="https://cdn.bootcss.com/babel-polyfill/7.0.0-beta.44/polyfill.min.js")

    //- CDN stylesheets
    link(href="//cdn.bootcss.com/normalize/5.0.0/normalize.min.css" rel="stylesheet")

    //- Local stylesheets
    link(href="./stylesheets/global.css" rel="stylesheet")

    block customer-meta
  body
    block customer-content

    script(src="https://cdn.bootcss.com/require.js/2.3.5/require.min.js")
    script(src="./scripts/config.js")

    block customer-footer
